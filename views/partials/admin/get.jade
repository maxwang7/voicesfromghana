extends ../../template

block head
	include admin_header

block content
	.row
		.col-xs-2
		.col-xs-8
			.row
				h1 Edit Post
			.row
				form.form-horizontal(action='/admin/blog/update/'+post._id method='post')
					.form-group
						label.col-xs-2.control-label Title
						.col-xs-6
							input.form-control(type='text' name='title' value=''+post.info.title)
					.form-group
						label.col-xs-2.control-label Description
						.col-xs-6
							input.form-control(type='text' name='description' value=''+post.info.description)
					.form-group
						label.col-xs-2.control-label Story
						.col-xs-6
							input.form-control(type='text' name='text' value='text'+post.info.text)
					.form-group
						label.col-xs-2.control-label Tags
						.col-xs-6
							input.form-control(type='text' name='text' value='tags'+post.info.tags)
					.form-group
						label.col-xs-2.control-label Location
						.col-xs-6
							input.form-control(type='text' name='text' value='location'+post.info.location)
					.form-group
						label.col-xs-2
							a(href='/admin/blog/getMedia/' + post._id) Click to see images
					.form-group
						.col-xs-11
						div
							button.btn.btn-primary(type='submit') Submit
		.col-xs-2