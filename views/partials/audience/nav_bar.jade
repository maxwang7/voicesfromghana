.voices-row.voices-audience-navbar
	.voices-audience-navbar-flag-container
		img#voices-audience-navbar-flag(src='/images/audience/black_flag.png' alt='Voices from Ghana')
	.voices-audience-navbar-nav
		span.voices-audience-navbar-nav-placeholders
		- var pages = ['home', 'about', 'thanks'];
		each page in pages
			if page === current_page
				.voices-audience-navbar-nav-page
					a(href='/'+page)#voices-audience-navbar-selected= page
				span.voices-audience-navbar-nav-placeholders
			else
				.voices-audience-navbar-nav-page
					a(href='/'+page)= page
				.voices-audience-navbar-nav-placeholders